<h1>カテゴリーページ</h1>

<div>
  <p><%= link_to "カテゴリ作成", new_user_category_path(current_user) if current_user %></p>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>カテゴリー名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category|  %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to '編集', edit_user_category_path(current_user, category) %>
        <%= link_to '削除', user_category_path(current_user, category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
